from ultralytics import YOLO
import yaml, os, torch

data = {
    'train': '/kaggle/input/yolo-training-dataset/train',
    'val': '/kaggle/input/yolo-training-dataset/val',
    'test': '/kaggle/input/yolo-training-dataset/test',
    'nc': 2,
    'names': ['helmet', 'head']
}
with open('/kaggle/working/dataset.yaml', 'w') as f:
    yaml.dump(data, f)

print("dataset.yaml created.")

device = 'cuda' if torch.cuda.is_available() else 'cpu'
print("Training on:", device)

model = YOLO('yolov8m.pt')
results = model.train(
    data='/kaggle/working/dataset.yaml',
    epochs=5,
    imgsz=640,
    batch=16,
    project='/kaggle/working/outputs',
    name='helmet_training',
    device=0
)
print("Training completed.")
        